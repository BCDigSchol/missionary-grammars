<!DOCTYPE html>
<html>
<head>
  <title>Missionary Grammars</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body
<% if logged_in? %>class="logged-in"
<% end %>>

<header>
  <div class="headwrap">
    <h1>Missionary Grammars project</h1>
    <nav>
      <% if logged_in? %> <a href="/edit">Edit</a> |
      <% end %> <a href="/texts">Texts</a> | <a href="/languages">Languages</a>
    </nav>
  </div>
</header>
<% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<% if logged_in? %>
    <%= link_to "Log out", logout_path, method: :get %>
<% end %>

<main>
  <%= yield %>
</main>

<footer>Footer here</footer>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
</html>
