<%= content_for :header do %>Texts<% end %>

<ul class="text-list">
  <% @texts.each do |text| %>
      <li>
        <%= link_to text do %>
            <div class="cover-holder">
              <img src="/img/texts/<%= text.id %>/<%= text.cover_image %>.jpg" alt="cover image">
            </div>
            <cite><%= text.title %></cite>
        <% end %>
        <% if logged_in? %>
            <%= link_to 'delete', text_path(text.id), :method => :delete, :class => 'delete', :confirm => 'Are you sure ?' %>
        <% end %>
      </li>
  <% end %>
</ul>

<% if logged_in? %>
    <%= link_to '+ New text', :controller => :texts, :action => :new %>
<% end %>